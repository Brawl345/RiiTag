extends head

mixin gameCard(game, i)
    .col-md-4
        .card.big-space-bottom
            .card-header
                h5.mb-0= `#${i} - ${wiiTDB[game.gameID]}`
            .card-body
                span.text-white
                    .container
                        .row.justify-content-center
                            .col-12
                                .text-center
                                    h5.mb-0= `This game has been played ${game.count} time(s).`
                                    img.big-space-top(src=`/cover?game=${game.gameID}&console=wii` alt=`${wiiTDB[game.gameID]}'s Cover`).no-hover

